    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            a.navbar-brand.ml-3(href="#") NodeJS
            button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
                span.navbar-toggler-icon
            div.collapse.navbar-collapse(id="navbarNav")
                ul.navbar-nav
                    li.nav-item.active
                        a.nav-link(onclick="irDashboard()") Dashboard 
                            span.sr-only
                    li.nav-item.active
                        a.nav-link(onclick="irForm()") Form 
                            span.sr-only
                div.form-inline.my-2.my-lg-0
                    button.btn.btn-outline-danger.my-2.my-sm-0(onClick="logout()") Logout
        div.d-flex.justify-content-center.p-5

            div.row.p-5.border.col-6
                h3.text-center.mb-2 Diario
                input.col-12.mb-3.form-control(
                    id="txtName"
                    type='text'
                    name='txtName'
                    placeholder='Titulo'
                )
                textarea.col-12.mb-3.form-control(
                    id="txtComents"
                    name="txtComents"
                    placeholder="Descripcion" 
                    rows="8"
                )
                button.col-12.btn.btn-primary(
                    id="btnSave"
                    name='btnSave'
                    onClick="guardarNota()"
                ) Guardar Nota
